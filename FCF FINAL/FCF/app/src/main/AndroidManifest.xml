<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kryzcorp.kryzaleasus.fcf">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".views.Splashscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.LoginActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".views.MainActivity"
            />

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity android:name=".views.AdministradorActivity"
                android:theme="@style/Theme.AppCompat.DayNight.Dialog"/>

        <activity android:name=".views.RegistroManualActivity" />

        <activity android:name=".views.GestionAdministradorActivity" android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".views.ConsultarLocalActivity" android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".views.CaracteristicasActivity" android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".views.ManteleriaActivity" android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".views.PlatillosActivity" android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".views.ServiciosActivity" android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".views.DecoracionActivity" android:theme="@style/Theme.AppCompat.DayNight.Dialog" />

    </application>

</manifest>
